FROM golang:alpine

ARG GITHUB_BRANCH

RUN apk update && apk add git
RUN go get -u github.com/FiloSottile/gvt

RUN mkdir -p /go/src/github.com/byuoitav
ADD . /go/src/github.com/byuoitav/av-api

WORKDIR /go/src/github.com/byuoitav/av-api

RUN gvt fetch -branch ${GITHUB_BRANCH} github.com/byuoitav/configuration-database-microservice
RUN gvt fetch -branch ${GITHUB_BRANCH} github.com/byuoitav/event-router-microservice

RUN go get -d -v
RUN go install -v

CMD ["/go/bin/shure-audio-microservice"]

EXPOSE 8000
